<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/blitzer/jquery-ui.css" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link type="text/css" rel="stylesheet" href="~/Content/PhotoSharingStyles.css" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index","home")">Danske Memes</a>
            </div>
            <div class="collapse navbar-collapse navbar-left" >
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("index","Photo")">All Photos</a></li>
                    <li><a href="@Url.Action("slideshow","Photo")">Slideshow</a></li>
                    <li><a href="@Url.Action("create","Photo")">Add Photo</a></li>
                </ul>
            </div>
            <div class="collapse navbar-collapse navbar-right">
                <ul class="nav navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                        <li>
                            @Html.ActionLink("Log Off", "LogOff", "Account")
                        </li>
                        <li>
                            @Html.ActionLink("Reset", "ResetPassword", "Account")
                        </li>
                        }
                        else
                        {
                            <li>
                                @Html.ActionLink("Log In", "Login", "Account")
                            </li>
                            <li>
                                @Html.ActionLink("Register", "Register", "Account")
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @if (Session["Favorites"] != null)
        {
            <div id="favourites-link">
                @Html.ActionLink("Favorite Photos", "FavoritesSlideshow", "Photo")
            </div>
        }

        <div>
            @RenderBody()
        </div>
    </body>
</html>
